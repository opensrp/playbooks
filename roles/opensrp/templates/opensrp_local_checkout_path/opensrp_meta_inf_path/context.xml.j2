<Context>
<Resource
		name="jdbc/openSRPDB"
		auth="Container"
		type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		initialSize="5"
		maxActive="55"
		maxIdle="21"
		minIdle="13"
		timeBetweenEvictionRunsMillis="34000"
		minEvictableIdleTimeMillis="55000"
		validationQuery="SELECT 1"
		validationInterval="34"
		testOnBorrow="true"
		removeAbandoned="true"
		removeAbandonedTimeout="233"
		username="{{ opensrp_postgresql_user }}"
		password="{{ opensrp_postgresql_password }}"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://{{ opensrp_postgres_host }}:{{ opensrp_postgres_port }}/{{ opensrp_postgresql_database }}{% if opensrp_postgres_enable_ssl %}?sslmode={{ opensrp_postgres_sslmode }}{% endif %}"
     />
</Context>
